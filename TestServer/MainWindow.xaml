<Window x:Class="TestServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="289" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,0">
        <Label x:Name="TitleLabel" Content="Server" HorizontalAlignment="Left" Margin="0,79,-1,0" VerticalAlignment="Top" Width="280" Height="61" RenderTransformOrigin="0.4,0.861" TextBlock.FontSize="28" HorizontalContentAlignment="Center" TextBlock.FontStyle="Italic" />
        <Label x:Name="ServerStatusLabel" Content="" HorizontalAlignment="Left" Margin="0,160,-1,0" VerticalAlignment="Top" Width="280" Height="36" HorizontalContentAlignment="Center" TextBlock.FontSize="18" Foreground="red" />
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="85,255,0,0" VerticalAlignment="Top" Width="110" Height="40" TextBlock.FontSize="22" Click="StartButton_Click" />
        <Button x:Name="EndButton" Content="End" HorizontalAlignment="Left" Margin="85,315,0,0" VerticalAlignment="Top" Width="110" Height="40" TextBlock.FontSize="22" Click="Button_Click" IsEnabled="False"/>


    </Grid>
</Window>
